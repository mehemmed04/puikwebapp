@using WebUI.Models;
@model List<Product>;

<div class="container mt-4">
    <div class="d-flex justify-content-end mb-3">
        <a asp-action="Create" asp-controller="Product" class="btn btn-primary">Create</a>
    </div>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Product ID</th>
                <th scope="col">Product Name</th>
                <th scope="col">Product Price</th>
                <th scope="col">Product Image</th>
                <th scope="col" class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Name</td>
                    <td>@item.Price.ToString("C")</td>
                    <td class="text-center">
                        <img src="~/Upload/ProductImages/@item.ImgUrl" class="img-thumbnail" style="max-width: 200px;" />
                    </td>
                    <td class="text-center">
                        <a asp-action="Update" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Update</a>
                        <a asp-action="Delete" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
